<div class="bsit-page">
{% if page.header %}
  <header id="header" class="it-header-wrapper">
      {{ page.header }}
  </header>
{% endif %}

  <div id="main" class="container my-4">
    <section id="content">
      <div id="content-header">
        {{ page.breadcrumb }}

        {% if page.highlighted|render %}
          <div id="highlighted">{{ page.highlighted }}</div>
        {% endif %}

        {{ title_prefix }}

        {% if title %}
          <h1>{{ title }}</h1>
        {% endif %}

        {{ title_suffix }}
        {{ page.help }}

        {% if tabs %}
          <div class="tabs">{{ tabs }}</div>
        {% endif %}

        {% if action_links %}
          <ul class="action-links">{{ action_links }}</ul>
        {% endif %}
      </div><!-- /#content-header -->
      <div id="content-area">
        {{ page.content }}
      </div>
    </section><!-- /#content -->
  </div>
  <div id="notification-center"></div>

{% if page.footer|render %}
  <footer id="footer" class="it-footer">
    {{ page.footer }}
  </footer>
{% endif %}
</div>
